{
    "name": "beratdogan6/weight-conversions",
    "description": "Weight conversions in PHP.",
    "keywords": [
        "beratdogan6",
        "weight-conversions"
    ],
    "homepage": "https://github.com/beratdogan6/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Berat Dogan",
            "email": "berat.dogan.3458@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "phpunit/phpunit": "^11.5",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Beratdogan6\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Beratdogan6\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
